<div class="container">
  <div class="row">
    <div class="col-4">
      <%= image_tag current_user.avatar %>
    </div>
    <div class= "col-8">
      <h1><%= current_user.full_name %></h1>
      <%= link_to "Edit Profile", edit_user_registration_path, class:"btn btn-secondary" %>
      <p><%= current_user.posts.count %> posts</p>
      <p><%= current_user.total_followers %> followers</p>
      <p><%= current_user.total_following %> following</p>
      <p><%= current_user.bio %></p>
    </div>
  </div>
</div>
